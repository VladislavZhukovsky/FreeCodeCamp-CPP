{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file - 01",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
			  "-fdiagnostics-color=always",
			  "-g",
			  "-std=c++20",
			  "${file}",
			  "-o",
			  "${fileDirname}\\program.exe"
			],
			"options": {
			  "cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
			  "kind": "build",
			  "isDefault": true
			}
		  }
	]
}